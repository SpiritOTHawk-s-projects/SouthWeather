{
  "name": "SouthWeather",
  "version": "1.0.1-Preview",
  "description": "Open weather app for linux",
  "main": "index.js",
  "author": "SpiritOTHawk <support@wlorigin.cf>",
  "license": "ISC",
  "build": {
    "linux": {
      "category": "Network",
      "icon": "./docs/icons/icon.png",
      "target": [
        "AppImage",
        "deb",
        "pacman"
      ]
    },
    "win": {
      "icon": "./docs/icons/icon.png"
    }
  },
  "homepage": "https://southweather.wlorigin.cf/",
  "bugs": {
    "url": "https://github.com/SpiritOTHawk-s-projects/SouthWeather/issues"
  },
  "scripts": {
    "start": "electron --linux .",
    "build": "electron-builder --linux appimage",
    "builddebian": "electron-builder --linux deb",
    "buildpacman": "electron-builder --linux pacman"
  },
  "devdependencies": {
    "electron": "^23.2.0",
    "electron-builder": "^23.6.0"
  }
}
